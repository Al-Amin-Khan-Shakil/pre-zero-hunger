<section class="container mt-4">
  <% if @users.blank? %>
    <div class="alert alert-warning" role="alert">
      <h2>There are no users in the system. <a href="<%= new_user_registration_path %>" class="alert-link">Join as a User</a></h2>
    </div>
  <% else %>
    <h2 class="mb-4">List of Users</h2>
    <ul class="list-group">
      <% @users.each do |user| %>
        <li class="list-group-item d-flex align-items-center">
        <div class="avatar-container mr-3">
          <% if user.avatar.attached? %>
            <%= image_tag user.avatar, class: "rounded-square", width: "100", height: "100", style: "object-fit: cover; object-position: top center;" %>
          <% end %>
        </div>
        <div class="flex-grow-1">
          <p><strong>Name:</strong> <%= user.name %></p>
          <p><strong>Age:</strong> <%= user.age %></p>
        </div>
        <div>
          <%= button_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
        </div>
        </li>
      <% end %>
    </ul>
  <% end %>
</section>
