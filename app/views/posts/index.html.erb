<h2> All Posts </h2>

<%= link_to "New Post", new_post_path, class: "btn btn-primary mb-3" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Created At </th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post_path(post) %></td>
        <td><%= truncate(post.description, length: 100) %></td>
        <td><%= post.created_at.strftime("%B %d, %Y %H:%M") %></td>
        <td>
          <%= link_to 'Show', post_path(post), class: "btn btn-info btn-sm" %>
          <%= link_to "Edit", edit_post_path(post), class: "btn btn-warning btn-sm" %>
          <%= link_to "Destroy", post_path(post), method: :delete, data: { confirm: "Are you Sure?" }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>